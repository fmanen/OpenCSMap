{
  "settings" : {
    "number_of_shards" : 5,
    "number_of_replicas" : 0,
    "index": {
      "analysis": {
        "filter": {
          "english_stop": {
            "type": "stop", 
            "stopwords":  "_english_"
          },
          "english_stemmer": {
            "type": "stemmer", 
            "language": "english"
          }
        },
        "normalizer": {
           "lowercase": { "type": "custom", "filter": ["lowercase"] }
        },
        "analyzer": {
          "lowercase": {
            "tokenizer":  "keyword", 
            "filter": ["lowercase"]
          },
          "english": {
            "tokenizer":  "standard", 
            "filter": [
              "lowercase", 
              "english_stop", 
              "english_stemmer"
            ]
          },
          "english_with_synonyms": {
            "tokenizer":  "standard", 
            "filter": [
              "lowercase", 
              "english_stop",
              "english_stemmer"
            ]
          }
        }
      }
    }
  },
